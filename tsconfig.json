{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "strict": true,
    "jsx": "react-jsx",
    "lib": ["dom", "es2015"],
    "paths": {
      "Components/*": ["./src/Components/*"],
      "Constants/*": ["./src/Constants/*"],
      "Hooks/*": ["./src/Hooks/*"],
      "Pages/*": ["./src/Pages/*"],
      "Router/*": ["./src/Router/*"],
      "Redux/*": ["./src/Redux/*"],
      "Types/*": ["./src/Types/*"],
      "Styles/*": ["./src/Styles/*"],
      "Utils/*": ["./src/Utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
